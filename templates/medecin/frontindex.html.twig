{% extends 'base.html.twig' %}

{% block title %}Panacea | Medecins{% endblock %}

{% block nav %}
<div class="main-menu">
    <nav class="navigation">
        <ul class="nav menu">
            <li><a href="index.html">Accueil</a></li>
            <li class="active"><a href="{{ path('app_medecin_list') }}">Médecins</a></li>
            <li><a href="#">Hôpitaux</a></li>
            <li><a href="#">Laboratoires</a></li>
            <li><a href="#">Pharmacies</a></li>
        </ul>
    </nav>
</div>
{% endblock %}

{% block body %}
<section class="ordonnance-table section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Nos Docteurs</h2>
                    <img src="{{ asset('front/img/about-img.jpg') }}" alt="#">
                    <p>Votre bien-être est notre priorité, voici nos docteurs.</p>
                    <a class="btn btn-primary" style="font-size: 16px;" href="{{ path('app_consultation_list',{'id' : 1}) }}">Mes consultations</a>
                </div>
            </div>
        </div>
        <div class="row">
            {% for med in medecins %}
            <!-- Ordonnance Unique -->
            <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="ordonnance-card" style="border: 2px solid #5DADE2;margin-bottom: 20px;">
                   <!-- En-tête de l'ordonnance -->
                    <div class="card-header" style="background-color: #5DADE2; color: white; text-align: center;">
                        <h4 class="title">Docteur N°{{ med.id }}</h4>
                    </div>
                    <img src="{{ med.qrCode }}" alt="QR Code">

                    <!-- Détails de l'ordonnance -->
                    <div class="card-body">
                        <p class="attribute-label" style="font-size: 18px;"><strong>Nom et prénom :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ med.prenom }} {{ med.nom }}</p>
                        <p class="attribute-label" style="font-size: 18px;"><strong>Spécialité :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ med.specialite }}</p>
                        <p class="attribute-label" style="font-size: 18px;"><strong>Email :</strong></p>
                        <p class="attribute-value" style="font-size: 16px;">{{ med.email }}</p>
                        <p class="attribute-label" style="font-size: 18px;"><strong>Consultation :</strong></p>
                        <a class="btn btn-primary" style="font-size: 16px;" href="{{ path('app_consultation_new',{'id' : med.id}) }}">Prenez rendez-vous</a>
                    </div>
                </div>
            </div>
            <!-- Fin Ordonnance Unique -->
            {% endfor %}
        </div>
    </div>
</section>
<!-- Fin Table des ordonnances -->

{% endblock %}
